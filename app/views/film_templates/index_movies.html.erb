<h1>All Movies</h1>

<a href="/movies/new">
  Add a new movie
</a>

<% @list_of_films.each do |the_movie| %>
  <div class="thumbnail">
    <img src="<%= the_movie.image_url %>">
    <a> <%= the_movie.title%> </a>
    <a> <%= the_movie.year%> </a>
    <a> <%= the_movie.duration%> </a>
    <a> <%= the_movie.description%> </a>
    <a> <%= the_movie.image_url%> </a>
    
    <div class="caption">
      <a href="/movies/<%= the_movie.id %>" class="btn btn-default btn-block">
        Show details
      </a>

      <a href="/movies/<%= the_movie.id %>/edit" class="btn btn-default btn-block">
        Edit movie
      </a>

      <a href="/delete_movie/<%= the_movie.id %>" class="btn btn-default btn-block">
        Delete movie
      </a>
    </div>
  </div>
<% end %>