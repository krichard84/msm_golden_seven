<h1>Actor Details</h1>

<img src="<%= @actor.image_url %>">

<h6> <%= @actor.image_url%> </h6>

<h2><%= @actor.name %></h2>

<h6>Date of Birth: <%= @actor.dob %> </h6>

<p>
  <%= @actor.bio %>
</p>

<p>
  <%= time_ago_in_words(@actor.created_at) %> ago
</p>

<a href="/actors" class="btn btn-default">
  Go back
</a>

<a href="/actors/<%= @actor.id %>/edit" class="btn btn-default">
  Edit actor
</a>

<a href="/delete_actor/<%= @actor.id %>" class="btn btn-default">
  Delete actor
</a>